@{
    var customerName = ViewContext.HttpContext.Items["CustomerName"] as string;
    var pointBalance = ViewContext.HttpContext.Items["PointBalance"];
    var customerid = ViewContext.HttpContext.Items["CustomerId"];
}
<header class="header1">
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light">
        <div class="container-fluid">
            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Indexafterlogin">
                <img src="~/logo.png" alt="Brand Logo" />
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Customer" asp-action="GetSubscription">Subscription</a>
                    </li>
                    <br />
                    <br />
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Store" asp-action="Store">Acha-Store</a>
                    </li>
                    <br />
                    <br />
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="About">About us</a>
                    </li>
                    <br />
                    <br />
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Contact">Contact</a>
                    </li>
                    <br />
                    <br />
                    <li class="nav-item">
                        <a class="nav-link text-dark"
                           asp-controller="Customer" asp-action="ForYou">
                            For You
                        </a>
                    </li>
                </ul>
            </div>
            <div class="d-flex align-items-center">
                <span class="me-3">Hello, @customerName!</span>
                <span class="me-3">Points: @pointBalance</span>
            </div>
            <!-- Profile Dropdown -->
            <div class="dropdown">
                <a class="nav-link dropdown-toggle" href="#" id="profileDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                    <img src="@Url.Action("GetProfileImage", "Customer", new { id = @customerid })"
                         alt="User Profile"
                         style="width:70px;height:70px"
                         onerror="this.onerror=null; this.src='~/default-avatar.png';" />
                </a>
                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="profileDropdown">
                    <li><a class="dropdown-item" asp-area="" asp-controller="Customer" asp-action="Profile">Profile</a></li>
                    <li><hr class="dropdown-divider"></li>
                    <li><a class="dropdown-item" asp-area="" asp-controller="Customer" asp-action="Logout">Logout</a></li>
                </ul>
            </div>
        </div>
    </nav>
</header>

