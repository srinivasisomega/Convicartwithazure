@model Customer
<style>

    .active-subscription {
        border: 2px solid #007BFF;
        box-shadow: 0 0 10px rgba(0, 123, 255, 0.5);
    }
    .Sub-title {
        display: flex;
        flex-direction: column;
    }

    .Subscription {
        width: 404px;
        height: 463px;
        margin-left: 30px;
        padding-left: 20px;
        padding-top: 10px;
        display: flex;
        flex-direction: column;
        justify-content: space-evenly;
        align-items: flex-start;
    }

    .Bronze {
        background-color: #CD7F32;
    }

    .Silver {
        background-color: #C0C0C0;
    }

    .Gold {
        background-color: #FFD700;
    }

    .amount {
        display: flex;
        flex-direction: row;
        align-items: flex-end;
    }

        .amount h2 {
            font-size: 48px;
            font-weight: bold;
        }

        .amount h5 {
            font-size: 20px;
            margin-bottom: 16px;
        }
</style>
<form asp-action="UpdateSubscription" method="post" class="Subscription Bronze">
    <input type="hidden" name="customerId" value="@Model.CustomerId" />
    <input type="hidden" name="subscriptionType" value="Bronze" />
    <input type="hidden" name="days" value="365" />
    <input type="hidden" name="amount" value="50000" />
    <div class="Sub-title">
        <h3>Bronze</h3>
        <div class="amount">
            <h2>₹ 50000</h2>
            <h5>/Year</h5>
        </div>
    </div>
    <ul>
        <li>Order ingredients for one person.</li>
        <li>Get access to basic recipes.</li>
        <li>Get info about calories consumed.</li>
    </ul>
    <button type="submit" class="btn btn-primary btn-block">Purchase</button>
</form>

