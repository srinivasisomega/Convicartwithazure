@model Customer
<style>
    .pb-3 {
        background-color: black;
    }
    /* Style for the progress bar */
    .progress-bar {
        display: flex;
        flex-direction: row;
        justify-content: space-between;
        align-items: center;
        background-color: #333;
        padding: 10px 20px;
    }

    /* Style for each section label */
    .section {
        font-family: 'Arial', sans-serif;
        font-size: 1.5rem;
        font-weight: 400;
        color: #ccc;
        text-align: center;
        padding: 0 20px;
        white-space: nowrap;
    }

    /* Highlight for the active section */
    .active {
        font-weight: bold;
        color: white;
    }

    .separator {
        flex-grow: 1;
        height: 4px;
        background-color: silver;
        opacity: 0.4;
        margin: 0 10px;
        border: none;
    }

        .separator.active-bar {
            background-color: #007BFF;
            opacity: 1;
        }

    h3 {
        color: white;
    }

    form {
        color: white;
        background-color: #222;
        padding: 20px;
        border-radius: 8px;
        max-width: 500px;
        margin: 20px auto;
        box-shadow: 0px 0px 15px rgba(0, 0, 0, 0.5);
    }

        form div {
            margin-bottom: 15px;
        }

    label {
        display: block;
        margin-bottom: 5px;
        font-size: 1.1rem;
        color: #ccc;
    }

    input {
        width: 100%;
        padding: 10px;
        font-size: 1rem;
        border-radius: 5px;
        border: 1px solid #555;
        background-color: #333;
        color: white;
    }

        input:focus {
            border-color: #888;
            outline: none;
        }

    .Switch-in-out {
        width: 100%;
        margin: 0 auto;
        text-align: center;
    }

    .nav-sign-in {
        display: flex;
        justify-content: center;
        margin-bottom: 20px;
    }

        .nav-sign-in h3 {
            margin: 0 20px;
            cursor: pointer;
            padding: 10px 20px;
            font-size: 1.2em;
            transition: background-color 0.3s ease;
        }

            .nav-sign-in h3:hover {
                background-color: #f0f0f0;
            }

    .switch-signup,
    .switch-signin {
        border: none;
        padding: 10px 20px;
        border-bottom: 2px solid transparent;
    }

    .active {
        border-bottom: 2px solid #007BFF;
        font-weight: bold;
    }

    .form-container-in-out {
        position: relative;
        width: 100%;
        display:flex;
        flex-direction:row;
        justify-content: center
    }

    .partial-Signin-Switch,
    .partial-Signup-Switch {
        display: none;
        width:max-content;
        
    }

        .partial-Signin-Switch.active,
        .partial-Signup-Switch.active {
            display: block;
        }

</style>
<div class="progress-bar">
    <span class="section active">Sign up/in</span>
    <hr class="separator" size="4"/>
    <span class="section">Subscription</span>
    <hr class="separator" size="4" />
    <span class="section">Preferences</span>
</div>
<div class="Switch-in-out">
    <div class="nav-sign-in">
        <h3 class="switch-signup">Sign up</h3>
        <h3 class="switch-signin">Sign in</h3>
    </div>
    <div class="form-container-in-out">
        <div class="partial-Signin-Switch"> @Html.Partial("_SignIn")</div>
        <div class="partial-Signup-Switch"> @Html.Partial("_SignUp")</div>
    </div>
</div>
<script src="~/js/SignUp.js"></script>