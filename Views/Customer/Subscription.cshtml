@{
    ViewData["Title"] = "Subscription";
}
<style>

    .container {
        background-color: black;
    }

    .Switch-in-out {
        background-color: black;
    }
    /* Style for the progress bar */
    .progress-bar {
        display: flex;
        flex-direction: row;
        justify-content: space-around;
        align-items: center;
        background-color: #333;
        padding: 10px 20px;
    }

    /* Section labels in progress bar */
    .section {
        font-family: 'Arial', sans-serif;
        font-size: 1.2rem;
        font-weight: 400;
        color: #ccc;
        text-align: center;
        padding: 0 15px;
        white-space: nowrap;
        font-size:24px;
    }

        /* Highlight active section in progress bar */
        .section.active {
            color: white;
            font-weight: bold;
            border-bottom: 2px solid #007BFF;
        }

    .separator {
        flex-grow: 1;
        height: 4px;
        background-color: silver;
        opacity: 0.4;
        margin: 0 10px;
        border: none;
    }

        .separator.active-bar {
            background-color: #007BFF;
            opacity: 1;
        }

    /* Style for the subscription switch (Month/Year) */
    .nav-sign-in {
        display: flex;
        justify-content: center;
        margin-bottom: 20px;
    }

        .nav-sign-in h3 {
            margin: 10px 10px;
            cursor: pointer;
            padding: 10px 20px;
            font-size: 1.2rem;
            transition: background-color 0.3s ease;
            color: white;
            background-color: grey;
        }

            .nav-sign-in h3:hover {
                background-color: blue;
            }

            .nav-sign-in h3.active {
                font-weight: bold;
                border-bottom: 2px solid #007BFF;
            }

    /* Container for partial forms */
    .form-container-in-out {
        display: flex;
        justify-content: center;
    }

    .partial-Year-Switch {
        display: none;
    }

    .partial-Month-Switch {
        display: none;
    }

        .partial-Month-Switch.active1 {
            display: flex;
            flex-direction: row;
            width: max-content;
        }

    .partial-Year-Switch.active1 {
        display: flex;
        flex-direction: row;
        width: max-content;
    }
</style>
<div class="progress-bar">
    <span class="section">Sign up/in</span>
    <hr class="separator active-bar" size="4" />
    <span class="section active">Subscription</span>
    <hr class="separator" size="4" />
    <span class="section">Preferences</span>
</div>
<div class="Switch-in-out">
    <div class="nav-sign-in">
        <h3 class="switch-Month">Month</h3>
        <h3 class="switch-Year">Year</h3>
    </div>
    <div class="form-container-in-out">
        <div class="partial-Year-Switch"> @Html.Partial("~/Views/Shared/Subscription/_SubYearoriginal.cshtml")</div>
        <div class="partial-Month-Switch"> @Html.Partial("~/Views/Shared/Subscription/_SubMonthoriginal.cshtml")</div>
    </div>
</div>
<script src="~/js/Subscription.js">

</script>